FC = gfortran
#FFLAGS = -g -fbounds-check -ffpe-trap=invalid,zero,overflow -fconvert=big-endian
FFLAGS = -O3 -funroll-loops -fconvert=big-endian

%.o:%.f90
	$(FC) -c ${FFLAGS} $<


vort = modkinem.f90 modiohf.f90 vorticity_s.f90

mixing:$(vort)
	$(FC) $(FFLAGS) $(vort) -o vorticity_s


clean:
	rm *.mod *.o

# DO NOT DELETE THIS LINE - used by make depend
vorticity_s.o: modkinem.o modiohf.o


