FC = gfortran
FFLAGS = -O3 -funroll-loops -g -C -fdefault-real-8 -fconvert=big-endian

%.o:%.f90
	$(FC) -c ${FFLAGS} $<


vort = modiohf.f90 keenergy.f90

vorticity:$(vort)
	$(FC) $(FFLAGS) $(vort) -o keenergy


clean:
	rm *.mod *.o

# DO NOT DELETE THIS LINE - used by make depend

keenergy.o: modiohf.o


